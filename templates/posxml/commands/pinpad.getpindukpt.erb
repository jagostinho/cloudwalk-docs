&lt;pinpad.close message="Pinpad off"/&gt;

&lt;inttostring variableinteger="$(iReturn)" variablestring="$(sReturn)"/&gt;

&lt;display column="0" line="1" message="$(sEncriptedPIN)"/&gt;
&lt;display column="0" line="2" message="$(sKSN)"/&gt;
